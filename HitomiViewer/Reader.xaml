<Window x:Class="HitomiViewer.Reader "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HitomiViewer"
        mc:Ignorable="d"
        Title="Reader" Height="450" Width="800" KeyDown="Image_KeyDown" MouseDown="Image_MouseDown">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="Top" MouseWheel="Image_MouseWheel">
            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="myScaleTransform" />
                    <RotateTransform x:Name="myRotateTransform" />
                </TransformGroup>
            </Image.LayoutTransform>
        </Image>

    </Grid>
</Window>
