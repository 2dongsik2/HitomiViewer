<UserControl x:Class="HitomiViewer.Style.tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HitomiViewer.Style"
             mc:Ignorable="d" 
             x:Name="Tag"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="border" Margin="0,0,2.5,0" Background="{Binding TagColor}" BorderBrush="Gray" Height="25" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label x:Name="label" BorderThickness="0" FontSize="12" Foreground="White" Content="{Binding TagName}"/>
    </Border>
</UserControl>
